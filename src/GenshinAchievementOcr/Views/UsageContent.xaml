<UserControl x:Class="GenshinAchievementOcr.Views.UsageContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GenshinAchievementOcr.Views"
             mc:Ignorable="d" FontSize="15" Width="NaN" Height="NaN"
             d:DesignHeight="900" d:DesignWidth="900">
    <StackPanel>
        <Grid  Margin="0,-15,0,0" Width="400" HorizontalAlignment="Left">
            <Border CornerRadius="10" BorderThickness="6" BorderBrush="White" Margin="5"/>
        </Grid>
        <TextBlock Text="{DynamicResource UsageMessageStepTitle}" TextWrapping="Wrap" Margin="0,0,0,0"/>
        <TextBlock Text="{DynamicResource UsageMessage1}" TextWrapping="Wrap" Margin="5,10,0,0"/>
        <TextBlock Text="{DynamicResource UsageMessage2}" TextWrapping="Wrap" Margin="5,10,0,0"/>
        <TextBlock Text="{DynamicResource UsageMessage3}" TextWrapping="Wrap" Margin="5,10,0,0"/>
    </StackPanel>
</UserControl>
