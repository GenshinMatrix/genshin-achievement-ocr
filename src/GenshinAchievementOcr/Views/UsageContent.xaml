<UserControl x:Class="GenshinAchievementOcr.Views.UsageContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GenshinAchievementOcr.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Width="NaN"
             Height="NaN"
             d:DesignHeight="900"
             d:DesignWidth="900"
             FontSize="15"
             mc:Ignorable="d">
    <StackPanel>
        <Grid Width="400"
              Margin="0,-15,0,0"
              HorizontalAlignment="Left">
            <Border Margin="5"
                    BorderBrush="White"
                    BorderThickness="6"
                    CornerRadius="10" />
        </Grid>
        <TextBlock Margin="0,0,0,0"
                   Text="{DynamicResource UsageMessageStepTitle}"
                   TextWrapping="Wrap" />
        <TextBlock Margin="5,10,0,0"
                   Text="{DynamicResource UsageMessage1}"
                   TextWrapping="Wrap" />
        <TextBlock Margin="5,10,0,0"
                   Text="{DynamicResource UsageMessage2}"
                   TextWrapping="Wrap" />
        <TextBlock Margin="5,10,0,0"
                   Text="{DynamicResource UsageMessage3}"
                   TextWrapping="Wrap" />
    </StackPanel>
</UserControl>
